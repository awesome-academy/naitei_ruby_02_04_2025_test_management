<div class="navbar">
  <ul>
    <li class="active">
     <% if current_user&.supervisor? %>
      <%= link_to supervisor_subjects_path do %>
        <i class="fa-solid fa-book-open"></i>
        <p><%= t "navbar.subject" %></p>
      <% end %>
    <% else %>
      <%= link_to subjects_path do %>
        <i class="fa-solid fa-book-open"></i>
        <p><%= t "navbar.subject" %></p>
      <% end %>
    <% end %>
    </li>
    <li>
      <% if current_user&.supervisor? %>
        <%= link_to supervisor_user_exams_path do %>
          <i class="fa-solid fa-file"></i>
          <p><%= t "navbar.exam" %></p>
        <% end %>
      <% else %>
        <%= link_to user_exams_path do %>
          <i class="fa-solid fa-file"></i>
        <p><%= t "navbar.exam" %></p>
        <% end %>
      <% end %>
    </li>
    <li>
      <% if current_user&.supervisor? %>
        <%= link_to supervisor_users_path do %>
          <i class="fa-solid fa-users"></i>
          <p><%= t "navbar.user_list" %></p>
        <% end %>
      <% end %>
    </li>
    <li>
      <% if current_user&.supervisor? %>
        <%= link_to supervisor_questions_path do %>
          <i class="fa-solid fa-book"></i>
          <p><%= t "navbar.question_list" %></p>
        <% end %>
      <% end %>
    </li>
  </ul>

  <% if user_signed_in? %>
    <div class="role">
      <% if current_user.user? %>
        <i class="fa-solid fa-user"></i>
        <p><%= t "role.user" %></p>
      <% elsif current_user.supervisor? %>
        <i class="fa-solid fa-user-tie"></i>
        <p><%= t "role.supervisor" %></p>
      <% end %>
    </div>
  <% end %>
</div>
