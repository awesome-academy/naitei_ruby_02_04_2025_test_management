<div class="edit-user-container">
  <div class="edit-form-section">
    <h2><%= t('.title') %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, t('.email_label') %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="confirmation-notice"><%= t('.unconfirmed_email_notice') %> <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, t('.password_label') %> <i><%= t('.password_instruction') %></i>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
        <% if @minimum_password_length %>
          <br />
          <em class="char-minimum"><%= @minimum_password_length %> <%= t('.password_length_minimum') %></em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, t('.password_confirmation_label') %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
      </div>

      <div class="field">
        <%= f.label :current_password, t('.current_password_label') %> <i><%= t('.current_password_instruction') %></i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-input" %>
      </div>

      <div class="actions">
        <%= f.submit t('.update_button'), class: "btn-update" %>
      </div>
    <% end %>
  </div>

  <div class="cancel-account-section">
    <h3><%= t('.cancel_account_title') %></h3>
    <p><%= t('.unhappy_prompt') %> <%= button_to t('.cancel_account_button'), registration_path(resource_name), data: { confirm: t('.confirm_cancellation'), turbo_confirm: t('.confirm_cancellation') }, method: :delete, class: "btn-cancel" %></p>
    <%= link_to t('.back_link'), :back, class: "back-link" %>
  </div>
</div>
