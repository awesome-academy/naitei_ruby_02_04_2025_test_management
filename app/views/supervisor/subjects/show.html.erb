<% provide :title, @subject.name %>

<div class="page-container subject-show-page">
  <div class="page-header">
    <h1 class="page-title"><%= @subject.name %></h1>
    <div class="page-actions">
      <% if current_user&.supervisor? %>
        <%= link_to t("subjects.show.edit"), edit_supervisor_subject_path(@subject), class: "button button-outline-primary" %>
      <% end %>
    </div>
  </div>

  <div class="content-card subject-description-card">
    <div class="card-section">
      <h2 class="card-header-title"><%= t("activerecord.attributes.subject.description") %></h2>
      <p class="card-text"><%= simple_format(@subject.description) %></p>
      <p class="meta-text"><%= t("common.created_at") %>: <%= l @subject.created_at, format: :long rescue @subject.created_at.strftime("%H:%M:%S %d/%m/%Y") %></p>
    </div>
  </div>

  <hr class="section-divider">

  <%= render "shared/exam_list" %>

  <hr class="section-divider">

  <%= render "user_exam_list" %>

  <hr class="section-divider">

  <%= render "question_list" %>

  <hr class="section-divider">

  <div class="page-footer-actions">
    <%= link_to t("subjects.index.title_short"), supervisor_subjects_path, class: "button button-secondary" %>
  </div>
</div>
